<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:orientation="vertical">


        <ImageView
                android:id="@+id/uplodad_profil_image"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_account"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="38dp"
                app:layout_constraintEnd_toStartOf="@+id/textView2" android:layout_marginBottom="49dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/textView2" android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bilgilerim:"
                android:textSize="24dp"
                android:id="@+id/textView2"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="155dp"
                android:layout_marginLeft="50dp" android:layout_marginStart="50dp"
                app:layout_constraintStart_toEndOf="@+id/profile_name_text"/>


        <TextView
                android:id="@+id/profile_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ad"
                android:textSize="24dp"
                android:layout_marginTop="52dp" android:layout_marginBottom="52dp"
                app:layout_constraintEnd_toEndOf="@+id/profile_surname_text"
                app:layout_constraintTop_toTopOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" app:layout_constraintBottom_toBottomOf="@+id/profile_surname_text"
                android:layout_marginStart="8dp" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>

        <TextView
                android:id="@+id/profile_surname_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soyad"
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="228dp"/>

        <TextView
                android:id="@+id/profile_job_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meslek"
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="19dp"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_surname_text"/>

        <TextView
                android:id="@+id/profile_phonenumber_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefon NumarasÄ±"
                android:textSize="24dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="23dp"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/profile_job_text"/>


        <Button
                android:id="@+id/profile_changes_button"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="Confirm Changes"
                android:background="@drawable/ovalbutton"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/profile_phonenumber_text"/>

        <Button
                android:id="@+id/sign_out_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ovalbutton"

                android:text="@string/sign_out_button"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="@+id/textView2"
                android:layout_marginLeft="20dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="20dp" android:layout_marginEnd="103dp" android:layout_marginRight="103dp"
                android:layout_marginBottom="12dp" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/profile_phonenumber_text"/>

        <ImageView
                android:text="settings"
                android:layout_width="75dp"
                android:src="@drawable/settings"
                android:layout_height="59dp"
                android:id="@+id/profile_settings_button"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"/>


    </android.support.constraint.ConstraintLayout>

</ScrollView>