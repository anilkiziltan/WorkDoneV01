<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ForgotPasswordActivity" tools:layout_editor_absoluteY="81dp">


    <TextView
            android:layout_width="wrap_content"
            android:text="What is My Password?"
            android:textSize="50dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/forgot_password_title_text"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_alignParentLeft="true"/>
    <TextView
            android:text="If you forgotten your password you can reset here"
            android:layout_width="wrap_content"
            android:textSize="30dp"
            android:textAlignment="center"


            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/forgotpassword_info_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="30dp" app:layout_constraintBottom_toTopOf="@+id/forgotpassword_email_text"
            android:layout_alignParentLeft="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="50"
            android:padding="5dip"
            android:background="@drawable/roundededittext"
            android:hint="Email"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" android:id="@+id/forgotpassword_email_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toTopOf="@+id/forgotpassword_sendEmail_button"
            android:layout_alignParentLeft="true"/>


    <Button
            android:text="Send My Password"
            android:layout_width="0dp"
            android:background="@drawable/ovalbutton"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" android:id="@+id/forgotpassword_sendEmail_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="61dp" android:layout_alignParentLeft="true"/>
    <TextView
            android:text="Cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contextClickable="true"
            android:id="@+id/forgotpassword_cancel_button"
            android:textAlignment="center" tools:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="17dp"/>

</android.support.constraint.ConstraintLayout>