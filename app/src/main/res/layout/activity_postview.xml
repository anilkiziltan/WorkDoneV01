<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".postview">

    <android.support.constraint.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <TextView
                android:layout_width="330dp"
                android:layout_height="45dp"
                android:id="@+id/kategori_view"
                android:hint="kategorisi"

                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp"/>

        <TextView android:layout_width="330dp" android:layout_height="200dp"
                  android:hint="açıklaması"
                  android:id="@+id/açıklama_view"
                  android:layout_marginTop="16dp"
                  app:layout_constraintTop_toBottomOf="@+id/kategori_view" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>

        <TextView android:layout_width="330dp" android:layout_height="45dp"
                  android:id="@+id/adres_view"
                  android:hint="lokasyonu"
                  app:layout_constraintTop_toBottomOf="@+id/açıklama_view"
                  android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginLeft="32dp" android:layout_marginStart="32dp"

        />

        <TextView android:layout_width="330dp" android:layout_height="45dp"
                  android:id="@+id/kullanıcı_view"
                  android:hint="kullanıcı bilgisi"
                  app:layout_constraintTop_toBottomOf="@+id/adres_view"
                  android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
        <Button
                android:text="Onayla"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/onay_button" android:layout_marginTop="44dp"
                app:layout_constraintTop_toBottomOf="@+id/kullanıcı_view" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="60dp" android:layout_marginStart="60dp"/>
        <Button
                android:text="Geri DÖN"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/geri_button" android:layout_marginTop="44dp"
                app:layout_constraintTop_toBottomOf="@+id/kullanıcı_view" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="60dp" android:layout_marginRight="60dp"/>


    </android.support.constraint.ConstraintLayout>

</FrameLayout>