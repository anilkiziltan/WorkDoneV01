<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Change_profile">


    <TextView
            android:text="AD:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/change_profil_name"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/enter_name" android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textVisiblePassword|textPersonName"
            android:ems="10"
            android:id="@+id/enter_name"
            app:layout_constraintStart_toStartOf="@+id/enter_last_name" android:layout_marginBottom="340dp"
            app:layout_constraintBottom_toTopOf="@+id/change_cancel_button" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp"/>
    <TextView
            android:text="SOYAD:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/change_last_name"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="11dp" android:layout_marginTop="147dp" android:layout_marginStart="11dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/enter_last_name"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/enter_name"
            app:layout_constraintStart_toEndOf="@+id/change_last_name"/>
    <TextView
            android:text="MESLEK:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/change_job"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="2dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/enter_number" android:layout_marginStart="2dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/enter_job"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="6dp" android:layout_marginStart="6dp"
            app:layout_constraintTop_toBottomOf="@+id/enter_password"
            app:layout_constraintStart_toEndOf="@+id/change_number"/>
    <TextView
            android:text="TELEFON:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/change_number"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="2dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/enter_job" android:layout_marginStart="2dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/enter_number"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/enter_job" app:layout_constraintStart_toEndOf="@+id/change_job"
            android:inputType="text"/>
    <Button
            android:text="Değişiklikleri Kaydet"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:id="@+id/confirm_change"
            android:background="@drawable/ovalbutton"
            app:layout_constraintEnd_toEndOf="@+id/enter_number" android:layout_marginBottom="188dp"
            app:layout_constraintStart_toStartOf="@+id/enter_number" android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="3dp" android:layout_marginRight="3dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="ŞİFRE:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/change_password"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/enter_password" android:layout_marginBottom="9dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/enter_password"
            app:layout_constraintStart_toStartOf="@+id/enter_last_name"
            app:layout_constraintTop_toBottomOf="@+id/enter_last_name"/>
    <TextView
            android:text="Vazgeç"
            android:gravity="center"
            android:layout_width="86dp"
            android:layout_height="0dp"
            android:id="@+id/change_cancel_button"
            app:layout_constraintStart_toStartOf="@+id/confirm_change" android:layout_marginLeft="56dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="56dp"
            app:layout_constraintTop_toBottomOf="@+id/enter_name" android:layout_marginBottom="131dp"/>
</android.support.constraint.ConstraintLayout>